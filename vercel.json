{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/orders/:orderId", "destination": "/api/orders/[orderId]" },
    { "source": "/api/orders/:orderId/invoice", "destination": "/api/orders/[orderId]/invoice" },
    { "source": "/api/admin/:orderId", "destination": "/api/admin/[orderId]" }
  ]
}